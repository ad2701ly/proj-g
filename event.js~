$(document).on("pageshow", "#blank", function(event) {		
  				$(".ui-footer").toolbar("show");
});
		
$(document).on("pagebeforeshow", "#howtouse", function(event) {		
  				$(".ui-footer").toolbar("hide");
});

$(document).on("pagebeforeshow", "#petunjuk", function(event) {		
  				$(".ui-footer").toolbar("hide");
});

		
